FROM node:20-alpine3.17
WORKDIR /app
COPY . .
RUN apk add python3
RUN apk add g++
RUN npm install -g node-gyp
RUN npm ci
ENV DB_URL=${DB_URL}
ENV PORT=${PORT}
ENV MAIL_PASSWORD=${MAIL_PASSWORD}
ENV MAIL_USER=${MAIL_USER}
ENV MAIL_SERVICE=${MAIL_SERVICE}
ENV MAIL_HOST=${MAIL_HOST}
ENV MAIL_PORT=${MAIL_PORT}
